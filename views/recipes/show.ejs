<!-- SHOWPAGE FOR EACH RECIPE -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <title>Recipe Show Page</title> -->
      <title><%= recipe.name %></title> <!-- Dynamic title based on recipe name -->
  </head>
  <body>

    <!-- ENHANCING OUR APPLICATION BY SHOIWING DETAILED INFORMATION ABOUT EACH RECIPE -->
    <!-- <h1>Here Is Your Recipe!</h1> -->


    <!-- SHOWPAGE RECIPE NAME - This is dynamic routing code in Express -->
    <h1><%= recipe.name %></h1> 
    <!-- And then add more details about the recipe below here for more detailed showpage info. -->


    <!-- SHOWPAGE RECIPE CATEGORY -->
    <p><strong>Category:</strong> <%= recipe.category %></p>


    <!-- SHOWPAGE RECIPE DESCRIPTION -->
    <% if (recipe.description && recipe.description.length > 0) { %>
        <p><strong>Description:</strong> <%= recipe.description %></p>
    <% } %>


    <!-- SHOWPAGE RECIPE INGREDIENTS -->
    <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>


    <!-- SHOWPAGE RECIPE INSTRUCTIONS -->
    <p><strong>Instructions:</strong> <%= recipe.instructions %></p>


    <!-- ISFAVORITERECIPE - Conditional rendering for showpage isFavoriteRecipe -->
    <% if (recipe.isFavoriteRecipe) { %>
        <p>🌟 This is one of your favorite recipes!</p>
    <% } else { %>
        <p>This is not marked as a favorite yet.</p>
    <% } %>


    <!-- ISDELICIOUS - Conditional rendering for showpage isDelicious -->
    <% if (recipe.isDelicious) { %>
        <p>😋 You marked this as delicious!</p>
    <% } else { %>
        <p>😐 You didn’t mark this as delicious.</p>
    <% } %>

    
    <!-- Navigation -->
    <br>
    <a href="/recipes">← Back to All Recipes</a>

  </body>
</html>

